<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="forgotPassword" namespace="/forgotPassword" extends="default">
        <result-types>
            <result-type name="tiles"
                class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        
        <interceptors>
            <interceptor name="ForgotPasswordInterceptor"
                class="com.ibm.opum.forgotPasswordInterceptor.action.ForgotPasswordInterceptor" />
            <interceptor-stack name="forgotPasswordStack">
                <interceptor-ref name="defaultStack" />
                <interceptor-ref name="ForgotPasswordInterceptor" />
            </interceptor-stack>
        </interceptors>
		
        <action name="forgotPasswordLink" method="forgotPassword"
            class="com.ibm.opum.util.action.ForgotPasswordAction">
            <interceptor-ref name="forgotPasswordStack" />
            <result name="forgotPw" type="tiles">forgotPasswordLink</result>
        </action>
        
        <action name="validateForgotPasswordLink" method="validateEmail"
            class="com.ibm.opum.util.action.ForgotPasswordAction">
            <interceptor-ref name="forgotPasswordStack" />
            <result name="isInvalidEmail" type="redirectAction">
                <param name="actionName">forgotPasswordLink</param>
                <param name="email">${email}</param>
            </result>
            <result name="isEmptyEmail" type="redirectAction">
                <param name="actionName">forgotPasswordLink</param>
                <param name="email">${email}</param>
            </result>
            <result name="isIncorrectEmail" type="redirectAction">
                <param name="actionName">forgotPasswordLink</param>
                <param name="email">${email}</param>
            </result>
            <result name="login" type="redirectAction">../login/loginLink</result>
        </action>
        
    </package>
</struts>