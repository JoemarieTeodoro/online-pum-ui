<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>StrutsExcer</display-name>
  <context-param>
    <param-name>org.apache.tiles.impl.BasicTilesContainer.DEFINITIONS_CONFIG</param-name>
    <param-value>/WEB-INF/tiles/tiles-admin.xml,/WEB-INF/tiles/tiles-login.xml,/WEB-INF/tiles/tiles-register.xml,/WEB-INF/tiles/tiles-user.xml,/WEB-INF/tiles/tiles-resetPassword.xml,/WEB-INF/tiles/tiles-forgotPassword.xml
		</param-value>
  </context-param>
  <listener>
    <listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
  </listener>
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>/pages/layout/index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>400</error-code>
    <location>/pages/error/400ErrorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/pages/error/401ErrorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/pages/error/403ErrorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/pages/error/404ErrorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>405</error-code>
    <location>/pages/error/405ErrorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>408</error-code>
    <location>/pages/error/408ErrorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>414</error-code>
    <location>/pages/error/414ErrorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/pages/error/500ErrorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>502</error-code>
    <location>/pages/error/502ErrorPage.jsp</location>
  </error-page>
  <error-page>
    <error-code>504</error-code>
    <location>/pages/error/504ErrorPage.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>/faces/*</url-pattern>
  </servlet-mapping>
</web-app>