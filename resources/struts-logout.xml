<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="logout" namespace="/logout" extends="default">
        <result-types>
            <result-type name="tiles"
                class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <action name="logoutLink" method="logout"
            class="com.ibm.opum.logout.action.LogOutLinkAction">
            <result name="logout" type="redirectAction">../login/loginLink
            </result>
        </action>
    </package>
</struts>